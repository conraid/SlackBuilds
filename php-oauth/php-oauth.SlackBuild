set -eu

CWD=$(pwd)

SRCNAM=oauth
PRGNAM=php-$SRCNAM
VERSION=${VERSION:-1.2.3}
BUILD=${BUILD:-26}
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

DOCFILES="LICENSE"

ARCH=${ARCH:=""} # Set ARCH or leave blank to determine it automatically/
if [ -z ${ARCH:=""} ]; then
  case "$( uname -m )" in
  i?86) ARCH=i686 ;;
  arm*) ARCH=arm ;;
  *) ARCH=$( uname -m ) ;;
  esac
fi

if [ "$ARCH" = "i586" ]; then
  SLKCFLAGS="-O2 -march=i586 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC -fomit-frame-pointer"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

rm -rf $PKG
mkdir -p $TMP $PKG
cd $TMP
rm -rf $SRCNAM-$VERSION
tar xzvf $CWD/$SRCNAM-$VERSION.tgz
cd $SRCNAM-$VERSION

chown -R root:root .
chmod -R u+w,go+r-w,a+X-s .

phpize --clean
phpize
CFLAGS="$SLKCFLAGS" \
./configure \
  --libdir=/usr/lib$LIBDIRSUFFIX \
  --disable-static \
  --enable-oauth \
  --host=$ARCH-slackware-linux \
  --build=$ARCH-slackware-linux

make
make INSTALL_ROOT=$PKG install
strip --strip-unneeded $PKG/usr/lib$LIBDIRSUFFIX/php/extensions/oauth.so

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a $DOCFILES $PKG/usr/doc/$PRGNAM-$VERSION || true
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

# Install config files
mkdir -p $PKG/etc/php.d
echo 'extension=oauth.so' > $PKG/etc/php.d/oauth.ini.new

mkdir -p $PKG/install 
cat $CWD/slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-txz}
