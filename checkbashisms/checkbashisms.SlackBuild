set -eu

cd $(dirname $0) ; CWD=$(pwd)

PRGNAM=devscripts
PKGNAM=checkbashisms
VERSION=2.23.4 # Version of debian devscripts
BUILD=${BUILD:-1}
ARCH=noarch
TAG=${TAG:-cf}
TMP=${TMP:-/tmp/pkg}
PKG=$TMP/package-$PKGNAM
OUTPUT=${OUTPUT:-/tmp}

# If the variable PRINT_PACKAGE_NAME is set, then this script will report what
# the name of the created package would be, and then exit. This information
# could be useful to other scripts.
if [ ! -z "${PRINT_PACKAGE_NAME:-""}" ]; then
  echo "$PKGNAM-$VERSION-$ARCH-${BUILD}${TAG}.txz"
  exit 0
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION || rm -rf $PRGNAM
tar xvf $CWD/${PRGNAM}_${VERSION}.tar.xz
cd $PRGNAM-$VERSION || cd $PRGNAM

chown -R root:root .
chmod -R u+w,go+r-w,a-s .

# Apply patches
if [ -e $CWD/patches/ ]; then
  for PATCH in $CWD/patches/*.patch; do
    patch -p1 -i $PATCH
  done
fi

install -Dm755 scripts/$PKGNAM.pl $PKG/usr/bin/$PKGNAM

install -Dm644 scripts/$PKGNAM.1 $PKG/usr/man/man1/${PKGNAM}.1
gzip -9 $PKG/usr/man/man1/$PKGNAM.1

# Install bash completion
install -Dm644 scripts/$PKGNAM.bash_completion $PKG/etc/bash_completion.d/$PKGNAM

mkdir -p $PKG/usr/doc/$PKGNAM-$VERSION
cp COPYING $PKG/usr/doc/$PKGNAM-$VERSION
cat $CWD/${PKGNAM}.SlackBuild > $PKG/usr/doc/$PKGNAM-$VERSION/$PKGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc
if [ -e $CWD/slack-required ]; then
  cat $CWD/slack-required > $PKG/install/slack-required
fi

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PKGNAM-$VERSION-$ARCH-$BUILD${TAG}.txz
